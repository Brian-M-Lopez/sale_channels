<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TREE VIEW -->
    <record id="sale_channel_tree_view" model="ir.ui.view">
        <field name="name">sale.channel.tree.view</field>
        <field name="model">sale.channel</field>
        <field name="arch" type="xml">
            <tree string="Sale Channels">
                <field name="name" />
                <field name="code" />
                <field name="warehouse_id" />
                <field name="invoice_journal_id" />
            </tree>
        </field>
    </record>
    <!-- FORM VIEW -->
    <record id="sale_channel_form_view" model="ir.ui.view">
        <field name="name">sale.channel.form.view</field>
        <field name="model">sale.channel</field>
        <field name="arch" type="xml">
            <form string="Sale Channel">
                <sheet string="Sale Channel">
                    <group>
                        <group>
                            <field name="name" />
                            <field name="code" />
                        </group>
                        <group>
                            <field name="warehouse_id" />
                            <field name="invoice_journal_id" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <!-- ACTION -->
    <record id="action_sale_channels" model="ir.actions.act_window">
            <field name="name">Sale Channels</field>
            <field name="res_model">sale.channel</field>
            <field name="view_mode">tree,form</field>
    </record>
    <!-- MENU ITEM -->
    <menuitem id="menu_sale_channel" name="Sale Channels"
            parent="sale.menu_sale_config"
            action="action_sale_channels"/>
</odoo>